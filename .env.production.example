# Production Environment Configuration for Staff-Web V2 System
# Copy this file to .env.production and customize with your production values

# Domain Configuration
DOMAIN_NAME=yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# Frontend Configuration
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com
NODE_ENV=production

# Database Configuration
DATABASE_URL=postgres://naga_user:your-postgres-password@postgres:5432/naga_production
POSTGRES_DB=naga_production
POSTGRES_USER=naga_user
POSTGRES_PASSWORD=your-super-secure-postgres-password-here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-django-key-here-make-it-long-and-random-50-chars-minimum
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_DEBUG=False

# SSL/TLS Configuration
SSL_CERT_EMAIL=admin@yourdomain.com
TRAEFIK_DASHBOARD_ENABLED=false

# Monitoring Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
GRAFANA_SMTP_ENABLED=false
GRAFANA_SMTP_HOST=smtp.yourdomain.com
GRAFANA_SMTP_USER=grafana@yourdomain.com
GRAFANA_SMTP_PASSWORD=your-email-password

# Netdata Configuration (optional)
NETDATA_CLAIM_TOKEN=your-netdata-claim-token
NETDATA_CLAIM_URL=https://app.netdata.cloud
NETDATA_CLAIM_ROOMS=your-netdata-room-id

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=@daily
BACKUP_RETENTION_DAYS=30

# Security Configuration
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true
API_RATE_LIMIT_PER_HOUR=1000

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password

# Sentry Configuration (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
ENABLE_API_DOCUMENTATION=false
ENABLE_DEBUG_TOOLBAR=false
ENABLE_ADMIN_INTERFACE=true

# Resource Limits
DJANGO_MAX_MEMORY=1G
POSTGRES_MAX_MEMORY=2G
REDIS_MAX_MEMORY=512M
FRONTEND_MAX_MEMORY=512M

# Logging Configuration
LOG_LEVEL=INFO
DATABASE_LOG_LEVEL=WARNING
API_LOG_LEVEL=INFO

# Session Configuration
SESSION_TIMEOUT=86400  # 24 hours
CSRF_COOKIE_AGE=3600   # 1 hour

# File Upload Configuration
MAX_FILE_SIZE=50M
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif

# Cache Configuration
CACHE_TIMEOUT=3600
CACHE_KEY_PREFIX=naga_staff_web_v2_prod