# PostgreSQL Production Environment Configuration
# Copy this file to .postgres and customize with your production values

# Database Credentials
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=naga_production
POSTGRES_USER=naga_user
POSTGRES_PASSWORD=your-super-secure-postgres-password-here

# Connection Pool Settings
POSTGRES_CONN_MAX_AGE=600
POSTGRES_CONN_HEALTH_CHECKS=True

# Performance Settings
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAINTENANCE_WORK_MEM=64MB
POSTGRES_WAL_BUFFERS=16MB
POSTGRES_WORK_MEM=4MB

# Logging Settings
POSTGRES_LOG_STATEMENT=all
POSTGRES_LOG_DURATION=on
POSTGRES_LOG_MIN_DURATION_STATEMENT=1000

# Backup Configuration
POSTGRES_BACKUP_ENABLED=True
POSTGRES_BACKUP_SCHEDULE=@daily
POSTGRES_BACKUP_RETENTION_DAYS=30
POSTGRES_BACKUP_RETENTION_WEEKS=8
POSTGRES_BACKUP_RETENTION_MONTHS=6

# Security Settings
POSTGRES_SSL_MODE=prefer
POSTGRES_HOST_AUTH_METHOD=md5