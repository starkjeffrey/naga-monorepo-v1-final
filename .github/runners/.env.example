 # GitHub Runner Configuration
# Copy this file to .env and fill in your values

# REQUIRED: GitHub Personal Access Token with 'repo' permissions
# Create at: https://github.com/settings/tokens
# Required scopes: repo (for private repos) or public_repo (for public repos)
GITHUB_TOKEN=your_github_personal_access_token_here

# REQUIRED: Repository to run actions for (format: owner/repo)
GITHUB_REPOSITORY=starkjeffrey/naga-monorepo

# OPTIONAL: Custom runner name (defaults to hostname + timestamp)
# This helps identify your runner in the GitHub UI
RUNNER_NAME=naga-monorepo-runner

# OPTIONAL: Runner labels (comma-separated)
# These labels are used in workflow files to target specific runners
RUNNER_LABELS=self-hosted,linux,x64,naga-monorepo,docker

# OPTIONAL: Runner group (useful for organizing multiple runners)
RUNNER_GROUP=default

# DATABASE CONFIGURATION (for running tests)
# These credentials match the LOCAL development database
# The runner may need these when running Django tests
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=naga_local
POSTGRES_USER=debug
POSTGRES_PASSWORD=debug

# Additional test database settings
TEST_POSTGRES_HOST=naga-runner-postgres
TEST_POSTGRES_PORT=5432
TEST_POSTGRES_DB=test_runner_db
TEST_POSTGRES_USER=test_runner
TEST_POSTGRES_PASSWORD=test_runner_pass