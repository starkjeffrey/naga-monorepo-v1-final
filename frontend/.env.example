# Example Environment Configuration for NAGA Frontend
# Copy this file to .env.local and update with your actual values

# API Configuration
VITE_API_BASE_URL=http://localhost:8000

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/callback

# Email Domain Restriction
VITE_ALLOWED_EMAIL_DOMAIN=pucsr.edu.kh

# Optional: CDN Configuration
VITE_MEDIAPIPE_CDN_URL=https://cdn.jsdelivr.net/npm/@mediapipe/face_detection
VITE_GOOGLE_APIS_URL=https://www.googleapis.com
VITE_DEFAULT_AVATAR_URL=https://cdn.quasar.dev/img/boy-avatar.png

# Optional: App Configuration
VITE_APP_NAME="Naga SIS - PUCSR"
VITE_APP_SHORT_NAME="PUCSR"
VITE_APP_DESCRIPTION="Student Information System for PUCSR"
VITE_APP_VERSION="1.0.0"

# Optional: Feature Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_BUNDLE_ANALYSIS=false
VITE_ENABLE_ERROR_REPORTING=false