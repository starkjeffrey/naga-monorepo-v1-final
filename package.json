{
  "name": "naga-monorepo",
  "version": "1.0.0",
  "description": "Naga Student Information System - Monorepo with Django backend and Vue.js frontend",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "nx run-many --target=dev --projects=backend,frontend --parallel=true",
    "dev:frontend": "nx run frontend:dev",
    "dev:backend": "nx run backend:serve",
    "dev:both": "nx run-many --target=dev --projects=backend,frontend --parallel=true",
    "dev:worktree:backend": "chmod +x scripts/worktree-backend.sh && scripts/worktree-backend.sh",
    "dev:worktree:frontend": "chmod +x scripts/worktree-frontend.sh && scripts/worktree-frontend.sh",
    "dev:worktree:both": "concurrently \"npm run dev:worktree:backend\" \"npm run dev:worktree:frontend\"",
    "build": "nx run-many --target=build --projects=frontend --parallel=true",
    "build:frontend": "nx run frontend:build",
    "test": "nx run-many --target=test --projects=backend,frontend --parallel=true",
    "test:frontend": "nx run frontend:test",
    "test:backend": "nx run backend:test",
    "test:backend:unit": "nx run backend:test:unit",
    "lint": "nx run-many --target=lint --all --parallel=true",
    "lint:frontend": "nx run frontend:lint",
    "lint:backend": "nx run backend:lint",
    "format": "nx format:write --all",
    "format:check": "nx format:check --all",
    "format:backend": "nx run backend:format",
    "format:backend:black": "cd backend && uv run black apps/ --line-length 119 --target-version py313",
    "format:backend:ruff": "cd backend && uv run ruff format apps/",
    "format:backend:all": "npm run format:backend:black && npm run format:backend:ruff",
    "typecheck": "nx run backend:typecheck",
    "migrate": "nx run backend:migrate",
    "migrate:both": "nx run backend:migrate:both",
    "shell": "nx run backend:shell",
    "schema:generate": "nx run backend:generate-schema",
    "schema:update": "npm run schema:generate && npx openapi-typescript backend/openapi-schema.json -o libs/shared/api-types/src/lib/generated-types.ts",
    "api:build-types": "nx run api-types:build",
    "api:update": "npm run schema:generate && npm run schema:update && npm run api:build-types",
    "api:watch": "nodemon --watch backend/apps --ext py --exec 'npm run api:update'",
    "up": "docker compose -f backend/docker-compose.local.yml up -d",
    "down": "docker compose -f backend/docker-compose.local.yml down",
    "logs": "docker compose -f backend/docker-compose.local.yml logs -f",
    "clean": "docker compose -f backend/docker-compose.local.yml down -v && docker system prune -f",
    "graph": "nx graph",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "affected:build": "nx affected --target=build"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/eslint": "21.2.1",
    "@nx/eslint-plugin": "21.2.1",
    "@nx/jest": "21.2.1",
    "@nx/js": "^21.2.1",
    "@nx/workspace": "^21.2.1",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.16.9",
    "concurrently": "^8.2.2",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "^21.2.1",
    "openapi-typescript": "^7.8.0",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.29.0",
    "zod": "^3.25.67"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/starkjeffrey/naga-monorepo"
  },
  "keywords": [
    "student-information-system",
    "django",
    "vue",
    "pwa",
    "education",
    "monorepo"
  ],
  "author": "Jeffrey Stark <stark.jeffrey@pucsr.edu.kh>",
  "license": "MIT"
}
