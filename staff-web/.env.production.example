# Staff-Web V2 Frontend Production Environment Configuration
# Copy this file to .env.production and customize with your production values

# API Configuration
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com

# Environment
NODE_ENV=production

# Build Configuration
VITE_BUILD_TARGET=esnext
VITE_BUILD_MINIFY=terser

# Feature Flags
VITE_ENABLE_DEVTOOLS=false
VITE_ENABLE_DEBUG=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Analytics Configuration (optional)
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=your-analytics-id

# Error Tracking (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production

# Application Configuration
VITE_APP_NAME=Staff Web V2
VITE_APP_VERSION=2.0.0
VITE_APP_TITLE=Naga Academy Staff Portal

# Security Configuration
VITE_ENABLE_SOURCE_MAPS=false
VITE_SECURE_COOKIES=true

# Performance Configuration
VITE_CHUNK_SIZE_WARNING_LIMIT=1000
VITE_LAZY_LOADING_ENABLED=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true
VITE_ANIMATION_DURATION=300

# Cache Configuration
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=3600

# File Upload Configuration
VITE_MAX_FILE_SIZE=52428800  # 50MB
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,csv,jpg,jpeg,png,gif

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=25
VITE_MAX_PAGE_SIZE=100

# Date/Time Configuration
VITE_DEFAULT_TIMEZONE=America/New_York
VITE_DATE_FORMAT=MM/DD/YYYY
VITE_TIME_FORMAT=hh:mm A

# Language Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,es

# Print Configuration
VITE_PRINT_MARGINS=0.5in
VITE_PRINT_ORIENTATION=portrait